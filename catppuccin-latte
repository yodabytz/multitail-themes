# Numbers
cs_re:60:(\b|-)([0-9]{1,})(\.[0-9]*)?\b

# States
cs_re:93,,bold: (UNDEF|NULL)           # Mauve
cs_re:34,,bold: (ON|OPEN|ONLINE|PLAY)  # Green
cs_re:208,,bold: (OFF|CLOSED|OFFLINE|PAUSE)  # Peach
cs_re_s:93,,bold: received command (.*?).?
cs_re_s:93,,bold: changed from (.*) to ([^ ]*?)

# Items
cs_re_s:172: - (.*) changed from        # Yellow-ish
cs_re_s:172: through (.*)
cs_re_s:172: Item '(.*)'

# Filenames and quotes
cs_re:172,,bold:\w*?\.(cfg|items|persist|rules|script|sitemap|things|map)
cs_re_s:172:.*'(.*?)'

# Others
cs_re:160: (failed|Failed|error|Error|Stopped)
cs_re:34: (Loading model|Started|Restore\ Values|has\ been\ started|Added\ new\ thing|Connected)

scheme:catppuccin-latte:/var/log/

